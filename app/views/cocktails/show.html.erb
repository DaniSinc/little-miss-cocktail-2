<%= render 'components/show-navbar' %>

<div class="container mt-4">

  <div class="cocktail-row">
    <div class="cocktail-column-left">
      <div class="card-trip">
        <%= cl_image_tag @cocktail.photo.key, class: "cocktail-photo"%>
        <h1><em><%= @cocktail.name %></em></h1>
        <div class="card-trip-infos">
          <table>
            <h4>What you will need:</h4>
            <tbody>
              <thead>
                <th>Ingredient</th>
                <th>Description</th>
                <th>Action</th>
              </thead>
              <% @cocktail.doses.each do |dose| %>
                <tr>
                  <td><%= dose.ingredient.name %></td>
                  <td><%= dose.description %></td>
                  <td>
                    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                      <i class="fa fa-trash destroy_dose"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="cocktail-column-right">
      <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
    </div>
  </div>

<div id="back-delete">
  <%= link_to "Back to all cocktails", root_path, class: "back-delete" %>
  <%= link_to "Delete cocktail", @cocktail, method: :delete, data: { confirm: "Are you sure?" }, class: "back-delete"%> 
</div>   
</div>