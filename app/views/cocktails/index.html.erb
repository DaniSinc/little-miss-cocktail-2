<%= render 'components/navbar' %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>

<div class="index-container text-center">
    <%= link_to "Add your own cocktail", new_cocktail_path, class: "add-button" %>
  <div class="index-cards">
    <% @cocktails.each do | cocktail | %>
      <%= link_to cocktail_path(cocktail) do %>
      <div class="cocktail-card text-center" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('<%= cl_image_path cocktail.photo.key %>')">
        <h3 id="cocktail-names"><%= cocktail.name %></h3>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
