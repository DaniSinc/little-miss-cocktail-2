<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create a new cocktail</h1>

      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file, label: false %>
        <%= f.button :submit, class: "add-button" %>
      
      <% end %>
    </div>
  </div>
</div>
